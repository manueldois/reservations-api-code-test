    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server: dev",
            "cwd": "${workspaceRoot}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server: dev test",
            "autoAttachChildProcesses": true,
            "cwd": "${workspaceRoot}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev:test"
            ],
            "console": "integratedTerminal"
        }
    ]
}